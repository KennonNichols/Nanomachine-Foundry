<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<HediffDef>
		<defName>THNMF_MechanizationShock</defName>
		<label>mechanization shock</label>
		<description>A toll taken on the body from system-wide microscopic modification to allow the body to readily accept nanite injections. Harsh on the body and the mind.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>10000~20000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>


		<stages>
			<li>
				<totalBleedFactor>1.2</totalBleedFactor>
				<vomitMtbDays>1.5</vomitMtbDays>
				<painOffset>0.05</painOffset>
				<statFactors>
					<PsychicSensitivity>2</PsychicSensitivity>
					<PsychicEntropyRecoveryRate MayRequire="ludeon.rimworld.royalty">0.1</PsychicEntropyRecoveryRate>
					<PsychicEntropyMax MayRequire="ludeon.rimworld.royalty">0.1</PsychicEntropyMax>
				</statFactors>
				<statOffsets>
					<MentalBreakThreshold>0.2</MentalBreakThreshold>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.8</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.9</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.9</postFactor>
					</li>
				</capMods>
			</li>
		</stages>

		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<isBad>true</isBad>
	</HediffDef>


	<!--Demechanization
  shock-->
	<HediffDef Name="THNMF_NaniteShock" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		<description>Loss of bloodborne nanites is causing a collapse in systems dependent on them. Demechanization shock is painful, and can be quickly lethal.</description>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
				<showDaysToRecover>true</showDaysToRecover>
			</li>
		</comps>
		<initialSeverity>0</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<isBad>true</isBad>
	</HediffDef>

	<HediffDef ParentName="THNMF_NaniteShock">
		<defName>THNMF_MechaniteShock</defName>
		<label>mechanite shock</label>
		<stages>
			<li>
