<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>Anomaly</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "HoldingPlatform"]</xpath>
			<value>
				<descriptionHyperlinks>
					<ThingDef>THNMF_BionaniteExtractor</ThingDef>
				</descriptionHyperlinks>
			</value>
		</match>
	</Operation>


	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>Anomaly</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="HoldingPlatformBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
			<value>
				<li>THNMF_BionaniteExtractor</li>
			</value>
		</match>
	</Operation>
</Patch>
